#!/bin/bash

[ -z "$SUDO" ] && SUDO=""
IDS="$(docker images | fzf | awk '{print $3}')"
for id in $IDS; do
  if $SUDO docker exec --rm -t -i ${CONTAINER} sh -c "builtin type bash" >/dev/null 2>&1; then
    echo $SUDO docker run --rm -t "$@" -i $id /bin/bash
  else
    echo $SUDO docker run --rm -t "$@" -i $id /bin/sh
  fi
done


