set modelines=10
function! MyStatusLine()
  let s = ''
  if &paste
    let s .= 'PASTE|'
  else
    let s .= ' '
  endif
  let modes = {
    \ 'V': 'V-L', "\<C-v>": 'V-B',
    \ 'S': 'S-L', "\<C-s>": 'S-B'
    \ }
  let m = mode()
  let s .= get(modes, m, toupper(m))."|"
  let s .= '%<'
  let s .= '%f ' " filename
  let s .= '%m' " modified flag
  let s .= '%r' " readonly flag
  let s .= '%h' " help flag
  let s .= '%w' " preview flag
  let s .= '%='
  let s .= '[%{&l:fenc}]'
  let s .= '[%{&l:ff}] %{&l:ft} '
  let s .= '< L%l:%c%V ' " current line status
  let s .= '%8P'
  return s
endfunction
set statusline=%!MyStatusLine()

