    function! s:plugin_install() " {{{3
      let exec_git = executable('git')
      let repos = [
      \ 'https://github.com/Shougo/vimfiler',
      \ 'https://github.com/Shougo/unite.vim',
      \ 'https://github.com/kana/vim-operator-replace',
